{
  "name": "ukyo",
  "version": "1.0.1",
  "description": "Webpack 4 - SCSS - PUG boilerplate",
  "main": "index.js",
  "loglevel": "silent",
  "scripts": {
    "build": "npm run clean -s && npm run production -s",
    "clean": "rimraf public",
    "dev": "cross-env webpack --config ./webpack/webpack.dev.js",
    "production": "cross-env webpack --progress --hide-modules --config ./webpack/webpack.prod.js",
    "start": "webpack-dev-server --open --config ./webpack/webpack.dev.js"
  },
  "keywords": [
    "webpack 4",
    "boilerplate",
    "scss",
    "pug",
    "babel"
  ],
  "author": "Giulio Collesei",
  "license": "ISC",
  "browserslist": [
    "last 2 version",
    "> 1%",
    "not dead"
  ],
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@babel/polyfill": "7.4.4",
    "@babel/preset-env": "7.6.3",
    "babel-eslint": "10.0.2",
    "babel-loader": "8.0.6",
    "copy-webpack-plugin": "5.0.4",
    "cross-env": "6.0.3",
    "css-hot-loader": "1.4.4",
    "css-loader": "3.2.0",
    "eslint": "6.0.1",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-compat": "3.2.0",
    "extract-loader": "3.1.0",
