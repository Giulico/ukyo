{
  "name": "ukyo",
  "version": "1.0.1",
  "description": "Webpack 4 - SCSS - PUG boilerplate",
  "main": "index.js",
  "loglevel": "silent",
  "scripts": {
    "build": "npm run clean -s && npm run production -s",
    "clean": "rimraf public",
    "dev": "cross-env webpack --config ./webpack/webpack.dev.js",
    "production": "cross-env webpack --progress --hide-modules --config ./webpack/webpack.prod.js",
    "start": "webpack-dev-server --open --config ./webpack/webpack.dev.js"
  },
  "keywords": [
    "webpack 4",
    "boilerplate",
    "scss",
    "pug",
    "babel"
  ],
  "author": "Giulio Collesei",
  "license": "ISC",
  "browserslist": [
    "last 2 version",
    "> 1%",
    "not dead"
  ],
  "devDependencies": {
    "@babel/core": "7.5.0",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "7.5.2",
    "babel-eslint": "^10.0.2",
    "babel-loader": "8.0.6",
    "copy-webpack-plugin": "5.0.3",
    "cross-env": "5.2.0",
    "css-hot-loader": "1.4.4",
    "css-loader": "3.0.0",
    "eslint": "^6.0.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-compat": "^3.2.0",
    "extract-loader": "3.1.0",
    "file-loader": "4.0.0",
    "html-loader": "0.5.5",
    "html-webpack-harddisk-plugin": "1.0.1",
    "html-webpack-plugin": "3.2.0",
    "ip": "1.1.5",
    "mini-css-extract-plugin": "0.7.0",
    "node-sass": "4.12.0",
    "node-sass-json-importer": "4.1.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "path": "0.12.7",
    "postcss-loader": "3.0.0",
    "pug": "2.0.4",
    "pug-html-loader": "1.1.5",
    "pug-loader": "2.4.0",
    "raw-loader": "3.0.0",
    "rimraf": "2.6.3",
    "sass-loader": "7.1.0",
    "source-map-loader": "0.2.4",
    "style-loader": "0.23.1",
    "stylelint": "10.1.0",
